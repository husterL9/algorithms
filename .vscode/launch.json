{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "--inspect"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      // "cwd": "${fileDirname}"
      "console": "integratedTerminal"
      // "internalConsoleOptions": "neverOpen"
    }
  ]
}
